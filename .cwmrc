# Theme Settings
borderwidth 0
color activeborder "#282a36"
color inactiveborder "#282a36"
color menubg "#282a36"
color menufg "#44475a"
color font "#f8f8f2"
color selfont "#f8f8f2"

# Set Font
fontname "Hermit:size=14"

# Turn on sticky-group mode
sticky yes

# Keybindings
# (firstly unbind the defaults - I am not quite a fan)
# C = Control, M = ALT, S = Shift, 4 = Mod4 (Windows Key)
unbind-key all

bind-key 4-Return		"xterm -geometry 125x40"
bind-key 4S-Return		"rofi -show run"

bind-key 4S-q			quit
bind-key 4S-r			restart
bind-key 4S-f			window-fullscreen
bind-key 4-q			window-close
bind-key 4-j			window-cycle
bind-key 4-k			window-rcycle
bind-key 4-1			group-only-1
bind-key 4-2			group-only-2
bind-key 4-3			group-only-3
bind-key 4S-1			window-movetogroup-1
bind-key 4S-2			window-movetogroup-2
bind-key 4S-3			window-movetogroup-3
bind-key 4-slash		menu-exec

# Application Keybindings
bind-key 4-w			chrome
bind-key 4-g			gimp
bind-key 4-s			scrot
bind-key 4-m			maxvol
bind-key 4-comma		voldown
bind-key 4-period		volup
bind-key 4-f			"xterm -e fff"
bind-key 4-p			"xterm -geometry 90x35 -e cmus"

# My Custom Script Keybindings
bind-key 4-e			emoji-selector
bind-key 4M-w			weather-get
bind-key 4-t			time_date
bind-key 4S-t			tempcheck

# Mouse Keybindings
unbind-mouse M-1
unbind-mouse M-2
unbind-mouse M-3
bind-mouse 4-1			window-move
bind-mouse 4-2			window-lower
bind-mouse 4-3			window-resize

# Applications Menu
command Browser chrome
command GIMP gimp
command Kdenlive kdenlive
command 0AD 0ad
command Xonotic xonotic-sdl
command Red-Alert openra-ra
command Dune2K openra-d2k
command Tiberian-Dawn openra-cnc
