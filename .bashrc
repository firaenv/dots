# If not running interactively, don't do anything
[[ $- != *i* ]] && return

stty -ixon # Disables ctrl-s and ctrl-q (Used To Pause Term)

## ALIASES ##

# navigation
alias ..='cd ..'
alias ...='cd ../..'

alias ls='lsd'
alias p='doas pacman'

# vim
alias v='vim'

# Add Color
alias grep='grep --color=auto'

_GREEN=$(tput setaf 2)
_BLUE=$(tput setaf 4)
_RED=$(tput setaf 1)
_RESET=$(tput sgr0)
_BOLD=$(tput bold)

PS1="${_GREEN}\h${_BLUE}@${_RED}\u${_RESET} \W ${_BOLD}\$  ${_RESET}"

