#!/bin/sh

while true; do

         LOCALTIME=$(date '+%a %I:%M %P ')
         VOL=$(sndioctl | egrep "output.l" | awk '{ print substr($1, 14); exit }')
         BATTERY=$(apm | awk '{ print substr( $4, 0 ); exit }') 

         xsetroot -name " BAT:$BATTERY VOL:$VOL | $LOCALTIME"

         sleep 2
done 
