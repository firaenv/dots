#!/bin/sh

# This will start up your usb webcam, start a x11 screen grab, and record your mic

videoName=$(date +"%m_%d_%M_%Y")
audioName=$(date +"%m_%d_%M_%Y").wav

mkdir /home/zaney/Videos/$videoName &

ffmpeg -y \
	-f x11grab -thread_queue_size 32 \
	-s 1920x1080 -r 30 -i $DISPLAY \
	-f sndio -thread_queue_size 32 -i snd/0 \
    -codec:v libx264rgb -crf 0 -preset ultrafast \
    -codec:a pcm_s16le \
	/home/zaney/Videos/$videoName/$videoName.mkv
